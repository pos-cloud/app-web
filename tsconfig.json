{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@types/*": ["types/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "types": [],
    "lib": ["es2017", "dom"],
    "module": "es2020",
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
